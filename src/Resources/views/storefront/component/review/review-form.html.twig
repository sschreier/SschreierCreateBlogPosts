{% sw_extends '@Storefront/storefront/component/review/review-form.html.twig' %}

{% block component_review_form_rating %}
    {% block component_review_form_rating_blogposts_before %}{% endblock %}

    {% set product = page.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if isBlogPost %}
        {% block component_review_form_rating_blogposts_custom %}
            {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-form-rating.html.twig' %}
        {% endblock %}
    {% else %}
        {% block component_review_form_rating_blogposts_default_before %}{% endblock %}

        {{ parent() }}

        {% block component_review_form_rating_blogposts_default_after %}{% endblock %}
    {% endif %}

    {% block component_review_form_rating_blogposts_after %}{% endblock %}
{% endblock %}

{% block component_review_form_content_label %}
    {% block component_review_form_content_label_blogposts_before %}{% endblock %}

    {% set product = page.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if isBlogPost %}
        {% block component_review_form_content_label_blogposts_custom %}
            {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-form-content-label.html.twig' %}
        {% endblock %}
    {% else %}
        {% block component_review_form_content_label_blogposts_default_before %}{% endblock %}

        {{ parent() }}

        {% block component_review_form_content_label_blogposts_default_after %}{% endblock %}
    {% endif %}

    {% block component_review_form_content_label_blogposts_after %}{% endblock %}
{% endblock %}
