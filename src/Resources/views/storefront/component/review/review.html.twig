    {% set product = element.data.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if not(isBlogPost) %}
        {% block component_review_list_content_blogposts_default_before %}{% endblock %}

        {{ parent() }}

        {% block component_review_list_content_blogposts_default_after %}{% endblock %}
    {% else %}
        {% block component_review_list_content_blogposts_custom %}
            {% for review in reviews %}
                <div class="product-detail-review-list-content">
                    {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-item.html.twig' %}
                </div>
            {% endfor %}
        {% endblock %}
    {% endif %}

    {% block component_review_list_content_blogposts_after %}{% endblock %}
{% endblock %}

