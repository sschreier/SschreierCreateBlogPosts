{% sw_extends '@Storefront/storefront/component/review/review.html.twig' %}

{% block component_review_aside %}
    {% block component_review_aside_blogposts_before %}{% endblock %}

    {% set product = element.data.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if isBlogPost %}
        {% block component_review_aside_blogposts_teaser %}
            <div class="product-detail-review-teaser js-review-teaser">

                {% block component_review_aside_blogposts_teaser_header %}
                    {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-widget-teaser-header.html.twig' %}
                {% endblock %}

                {% block component_review_aside_blogposts_teaser_text %}
                    {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-widget-teaser-text.html.twig' %}
                {% endblock %}

                {% block component_review_aside_blogposts_teaser_button %}
                    {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-widget-teaser-button.html.twig' %}
                {% endblock %}
            </div>
        {% endblock %}
    {% else %}
        {% block component_review_aside_blogposts_default_before %}{% endblock %}

        {{ parent() }}

        {% block component_review_aside_blogposts_default_after %}{% endblock %}
    {% endif %}

    {% block component_review_aside_blogposts_after %}{% endblock %}
{% endblock %}

{% block component_review_alert %}
    {% block component_review_alert_blogposts_before %}{% endblock %}

    {% set product = element.data.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if isBlogPost %}
        {% block component_review_alert_blogposts_inner %}
            {% sw_include '@SschreierCreateBlogPosts/storefront/custom/review-alert.html.twig' %}
        {% endblock %}
    {% else %}
        {% block component_review_alert_blogposts_default_before %}{% endblock %}

        {{ parent() }}

        {% block component_review_alert_blogposts_default_after %}{% endblock %}
    {% endif %}

    {% block component_review_alert_blogposts_after %}{% endblock %}
{% endblock %}

