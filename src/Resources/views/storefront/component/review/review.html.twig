{% block component_review_list_action_sortby %}
    {% block component_review_list_action_sortby_blogposts_before %}{% endblock %}

    {% set product = element.data.product %}
    {% set customFields = product.translated.customFields %}
    {% set isBlogPost = customFields['sschreier_productblogpostsettings_isblogpost'] %}

    {% if not(isBlogPost) %}
        {% block component_review_list_action_sortby_blogposts_default_before %}{% endblock %}

